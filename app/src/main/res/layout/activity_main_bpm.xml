<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@drawable/background_main_bottom"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/radio_bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_bpm"
                android:button="@null"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/image_bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/background_button_check"
                android:visibility="invisible" />
            
            <TextView
                android:id="@+id/text_bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/radio_bpm"
                android:layout_alignLeft="@id/radio_bpm"
                android:layout_alignRight="@id/radio_bpm"
                android:layout_alignTop="@id/radio_bpm" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/radio_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_setting"
                android:button="@null"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/image_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/background_button_check"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/radio_settings"
                android:layout_alignLeft="@id/radio_settings"
                android:layout_alignRight="@id/radio_settings"
                android:layout_alignTop="@id/radio_settings" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>