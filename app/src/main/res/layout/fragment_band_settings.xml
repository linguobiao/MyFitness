<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_setting" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_main_bend_bottom" >

        <ImageView
            android:id="@+id/image_setting"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@null"
            android:src="@drawable/image_setting" />

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_setting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="@string/SETTINGS"
            android:textColor="#5db2e8" />

        <ImageView
            android:id="@+id/image_title_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:contentDescription="@null"
            android:src="@drawable/image_title_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            android:src="@drawable/button_left_no_font" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            android:src="@drawable/button_right_no_font" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/layout_title"
        android:layout_marginTop="@dimen/tab_height" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_profile"
                android:layout_width="@dimen/size_settings_item_width"
                android:layout_height="@dimen/size_settings_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_settings_item_interval"
                android:background="@drawable/background_settings_item" >

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/image_settings_profile" />

                <ImageView
                    android:id="@+id/image_profile_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/button_setting_right_arrow" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/image_profile_arrow"
                    android:layout_toRightOf="@id/image_profile"
                    android:gravity="center_horizontal"
                    android:text="@string/My_Profile"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_goal"
                android:layout_width="@dimen/size_settings_item_width"
                android:layout_height="@dimen/size_settings_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_settings_item_interval"
                android:background="@drawable/background_settings_item" >

                <ImageView
                    android:id="@+id/image_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/image_settings_goal" />

                <ImageView
                    android:id="@+id/image_goal_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/button_setting_right_arrow" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/image_goal_arrow"
                    android:layout_toRightOf="@id/image_goal"
                    android:gravity="center_horizontal"
                    android:text="@string/Workout_Goal"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_reminder"
                android:layout_width="@dimen/size_settings_item_width"
                android:layout_height="@dimen/size_settings_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_settings_item_interval"
                android:background="@drawable/background_settings_item" >

                <ImageView
                    android:id="@+id/image_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/image_settings_reminder" />

                <ImageView
                    android:id="@+id/image_reminder_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/button_setting_right_arrow" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/image_reminder_arrow"
                    android:layout_toRightOf="@id/image_reminder"
                    android:gravity="center_horizontal"
                    android:text="@string/Reminders"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_alarm"
                android:layout_width="@dimen/size_settings_item_width"
                android:layout_height="@dimen/size_settings_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_settings_item_interval"
                android:background="@drawable/background_settings_item" >

                <ImageView
                    android:id="@+id/image_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/image_settings_alarm" />

                <ImageView
                    android:id="@+id/image_alarm_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/button_setting_right_arrow" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/image_alarm_arrow"
                    android:layout_toRightOf="@id/image_alarm"
                    android:gravity="center_horizontal"
                    android:text="@string/Smart_Alarm"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_about_us"
                android:layout_width="@dimen/size_settings_item_width"
                android:layout_height="@dimen/size_settings_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_settings_item_interval"
                android:background="@drawable/background_settings_item" >

                <ImageView
                    android:id="@+id/image_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/image_settings_about_us" />

                <ImageView
                    android:id="@+id/image_about_us_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/button_setting_right_arrow" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/image_about_us_arrow"
                    android:layout_toRightOf="@id/image_about_us"
                    android:gravity="center_horizontal"
                    android:text="@string/About_Us"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_choice_device"
                android:layout_width="@dimen/size_settings_item_width"
                android:layout_height="@dimen/size_settings_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_settings_item_interval" >

                <TextView
                    android:id="@+id/text_background"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/background_settings_item_left" />

                <ImageView
                    android:id="@+id/image_choice_device_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/button_setting_left_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignRight="@id/text_background"
                    android:layout_toRightOf="@id/image_choice_device_arrow"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/Choose_Device"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/size_settings_item_width"
                android:layout_height="@dimen/size_settings_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_settings_item_interval" >

                <RelativeLayout
                    android:id="@+id/layout_bluetooth"
                    android:layout_width="65dp"
                    android:layout_height="fill_parent" >

                    <ImageView
                        android:id="@+id/image_bluetooth"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@drawable/image_bluetooth_small" />
                </RelativeLayout>

                <Button
                    android:id="@+id/button_sync"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/layout_bluetooth"
                    android:background="@drawable/button_sync_1"
                    android:text="@string/SYNC"
                    android:textColor="@color/color_light_blue"
                    android:textSize="@dimen/text_size_settings_sync" />

                <ImageView
                    android:id="@+id/image_unbound"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/button_sync"
                    android:contentDescription="@null"
                    android:src="@drawable/image_state_unbind" />

                <Button
                    android:id="@+id/button_lost_mode"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/image_unbound"
                    android:background="@drawable/button_lost_mode"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:text="@string/LOST_MODE"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_settings_lost_mode" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>