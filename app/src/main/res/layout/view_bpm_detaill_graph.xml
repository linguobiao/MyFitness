<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp" >

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/image_bpm_color_circle" >

        <ImageView
            android:id="@+id/image_point_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="105dp"
            android:contentDescription="@null"
            android:src="@drawable/image_bpm_piont" />

        <ImageView
            android:id="@+id/image_point_opti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="63dp"
            android:contentDescription="@null"
            android:src="@drawable/image_bpm_piont" />

        <ImageView
            android:id="@+id/image_point_norm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="28dp"
            android:contentDescription="@null"
            android:src="@drawable/image_bpm_piont" />

        <ImageView
            android:id="@+id/image_point_mild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="28dp"
            android:contentDescription="@null"
            android:src="@drawable/image_bpm_piont" />

        <ImageView
            android:id="@+id/image_point_midd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="63dp"
            android:contentDescription="@null"
            android:src="@drawable/image_bpm_piont" />

        <ImageView
            android:id="@+id/image_point_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="105dp"
            android:contentDescription="@null"
            android:src="@drawable/image_bpm_piont" />
        
        <TextView 
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Low"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        
        <ImageView 
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@null"
            android:src="@drawable/image_point_check"/>
        
        <ImageView 
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:src="@drawable/image_point_uncheck"/>
    </LinearLayout>
</RelativeLayout>