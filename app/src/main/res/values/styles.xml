<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         <item name="android:windowNoTitle">true</item>
         <item name="android:windowFullscreen">false</item>
    </style>

    <style name="style_bpm_level_item_ly">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_bpm_level_item_ly_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_bpm_level_item_tv_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">136/83mmHg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_bpm_sys_dia</item>
    </style>

    <style name="style_bpm_level_item_tv_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">02-06 16:10:52</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_bpm_date</item>
    </style>

    <style name="style_bpm_level_item_iv">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="style_bpm_level_item_tv_level">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/text_size_bpm_type</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
